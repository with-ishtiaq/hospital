{
  "name": "fydp-backend",
  "version": "1.0.0",
  "description": "FYDP Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:create": "node scripts/create-db.js",
    "db:drop": "node scripts/drop-db.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "test": "npm run test:setup && npm run test:run",
    "test:setup": "node scripts/setup-test-db.js",
    "test:run": "mocha test/**/*.js --timeout 10000",
    "test:db": "node test/test-db-connection.js",
    "test:hospitals": "node test/test-hospital-dbs.js",
    "test:models": "npm run test:setup && mocha test/test-models.js --timeout 10000",
    "db:setup:hospitals": "node scripts/setup-hospital-schemas.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "chai": "^5.2.1",
    "cross-env": "^7.0.3",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}

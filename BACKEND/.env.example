# Database
NEON_DATABASE=postgresql://user:password@host:port/dbname
DATABASE_URL_HOSPITAL1=postgresql://user:password@host:port/dbname

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h

# CORS
FRONTEND_URL=http://localhost:3000

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window per IP
AUTH_RATE_LIMIT_MAX_REQUESTS=5  # Stricter limit for auth routes

# Email Configuration
EMAIL_SERVICE=gmail  # or your email service (e.g., 'gmail', 'outlook')
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password  # Use app password for Gmail
EMAIL_FROM=your-email@gmail.com

# Verification Code
VERIFICATION_CODE_EXPIRY_MINUTES=30  # Verification code expiry time in minutes
VERIFICATION_RESEND_COOLDOWN=60  # Cooldown period in seconds

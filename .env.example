# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration (PostgreSQL with Neon)
NEON_DATABASE=postgresql://username:password@hostname:5432/database
# Alternative: DATABASE_URL=postgresql://username:password@hostname:5432/database

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (if using email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_EMAIL=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME='Your App Name'

# File Uploads (if needed)
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./public/uploads/

# Security
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100  # Limit each IP to 100 requests per windowMs
